<div id="final" class="container">
    <h2>Feliz aniversário, meu bemm! ❤️</h2>
    <p>Que você realize todos os seus sonhoss, e que possamos passar por essa data muitos muitos anoss maissss.<br> Eu te amo mil milhões ❤️</p>
    <canvas class="confetti"></canvas>
</div>

<script>
function mostrarEtapa(numero) {
    document.querySelectorAll('.container').forEach(div => div.classList.remove('active'));
    document.getElementById(`etapa${numero}`).classList.add('active');
}

function clicarCerto(proxima) {
    document.querySelectorAll('.container').forEach(div => div.classList.remove('active'));
    if (proxima === 'final') {
        document.getElementById('final').classList.add('active');
        soltarConfete();
    } else {
        document.getElementById(`etapa${proxima}`).classList.add('active');
    }
}

function soltarConfete() {
    const canvas = document.querySelector('.confetti');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
    let confetes = [];
    for (let i = 0; i < 150; i++) {
        confetes.push({
            x: Math.random() * canvas.width,
            y: Math.random() * canvas.height,
            r: Math.random() * 6 + 4,
            d: Math.random() * 10 + 10,
            color: `hsl(${Math.random() * 360}, 100%, 50%)`,
            tilt: Math.random() * 10 - 10
        });
    }
    function desenharConfete() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        confetes.forEach(c => {
            ctx.beginPath();
            ctx.fillStyle = c.color;
            ctx.arc(c.x, c.y, c.r, 0, Math.PI * 2);
            ctx.fill();
        });
        atualizar();
    }
    function atualizar() {
        confetes.forEach(c => {
            c.y += Math.cos(c.d) + 1 + c.r / 2;
            c.x += Math.sin(c.d);
            if (c.y > canvas.height) {
                c.x = Math.random() * canvas.width;
                c.y = -10;
            }
        });
    }
    setInterval(desenharConfete, 20);
}
</script>

